<div class="container">
    <div class="row">
        <div class="col-xs|sm|md|lg|xl-1-12">
            <div class="card-body text-center ">
                <div class="card-header">
                    <h1>Contest Vacation (upload files)</h1>
                </div>
                <div class="card-body center-text">
                    {{! uso do enctype="multipart/form-data" para permitir o upload de arquivos}}
                    <form class="form-horizontal" role="form" enctype="multipart/form-data" method="POST"
                        action="/contest/formPhoto/{{year}}/{{month}}">
                        <input type="hidden" name="_csrf" value="{{csrf}}">
                        <div class="form-group row">
                            <label for="fieldName" class="col-sm-2 control-label">Nome</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="fieldName" name="name">
                            </div>
                        </div>
                        <br>
                        <div class="form-group row">
                            <label for="fieldEmail" class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-4">
                                <input type="email" class="form-control" required id="fieldEmail" name="email">
                            </div>
                        </div>
                        <br>
                        <div class="form-group row">
                            <label for="fieldPhoto" class="col-sm-2 control-label">Foto de FÃ©rias</label>
                            <div class="col-sm-4">
                                {{!Atributo accept para restringir o tipo de arquivo}}
                                <input type="file" class="form-control" required accept="image/*" id="fieldPhoto"
                                    name="photo">
                            </div>
                        </div>
                        <br>
                        <div class="form-group ">
                            <div class="col-">
                                <button type="submit" class="btn btn-primary">Salvar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>